# Flask
SECRET_KEY=change-me-in-production

# SQLAlchemy
SQLALCHEMY_DATABASE_URI=sqlite:///dropflow.db

# Supplier Vault Encryption (CRITICAL)
# Generate with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Store securely (do not commit real keys).
VAULT_ENCRYPTION_KEY=replace-with-generated-fernet-key

# Email (Flask-Mail)
# Defaults in app.py are SendGrid-friendly:
#   MAIL_SERVER=smtp.sendgrid.net
#   MAIL_USERNAME=apikey
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=apikey
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=hello@dropflow.com
